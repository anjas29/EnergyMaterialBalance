<!-- Modal Window-->
<div class="modal fade" id="updateBGroupModal" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
    <form id="updateBGroupForm">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content text-left">
                <div class="modal-header">
                    <h5 class="modal-title" id="">Update BGroup</h5>
