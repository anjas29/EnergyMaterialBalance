<button type="button" id="btnCreateBGroupModal" class="btn vertical-crd-button" data-toggle="modal" data-target="#createBGroupModal" disabled>
    <i class="fas fa-plus"></i>
</button>


<!-- Modal Window-->
<div class="modal fade" id="createBGroupModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <form id="createBGroupForm">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content text-left">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Create BGroup</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="bgroupName">BGroup Name</label>
                        <input type="text" class="form-control border-radius-zero" id="createBGgroupName" placeholder="BGroup Name" name="bgroupName" required data-error='BGroup Name is required'>
                        <div class="help-block with-errors"></div>
                    </div>
                    <div class="form-group">
                        <label for="validDisbalance">Valid Disbalance</label>
                        <input type="text" class="form-control border-radius-zero" id="createValidDisbalance" placeholder="Valid Disbalance" name="validDisbalance" required data-error='Valid Disbalance is required'>
                        <div class="help-block with-errors"></div>
                    </div>
                    <div class="form-group">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" required name="createBGroupIdParent" id="sameLevel" value="">
                            <label class="form-check-label" for="sameLevel">Same level</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" required name="createBGroupIdParent" id="asChild" value="">
                            <label class="form-check-label" for="asChild">As child</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer text-center">
                    <input name="resourceId" id="createResourceId" type="hidden" value="">
                    <button type="button" class="btn modal-button-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn modal-button-primary">Save</button>
                </div>
            </div>
        </div>
    </form>
</div>

