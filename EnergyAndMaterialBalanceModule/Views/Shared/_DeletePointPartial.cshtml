<button type="button" id="btnDeletePointModal" class="btn vertical-crd-button" data-toggle="modal" data-target="#deletePointModal" disabled>
    <i class="fas fa-trash-alt"></i>
</button>


<!-- Modal Window-->
<div class="modal fade" id="deletePointModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <form id="deletePointForm">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Delete Point</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning" id="deletePointMessage" role="alert">

                    </div>
                    <p>Do you really want to delete <b id="deletePointName"></b></p>
                    <span id="deletePointFormula"> This point has formula, formula and parameters will be deleted also </span>
                </div>
                <div class="modal-footer text-center">
                    <input name="deletedPoint" id="deletePointId" type="hidden">
                    <button type="button" class="btn modal-button-secondary" data-dismiss="modal">Cancel</button>
                    <button id="deletePointSubmit" type="submit" class="btn modal-button-primary">Delete</button>
                </div>
            </div>
        </div>
    </form>
</div>

