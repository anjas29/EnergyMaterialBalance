
<button type="button" id="btnUpdatePointModal" class="btn vertical-crd-button" data-toggle="modal" data-target="#updatePointModal" disabled>
    <i class="fas fa-pencil-alt"></i>
</button>

<!-- Modal Window-->
<div class="modal fade" id="updatePointModal" tabindex="-1" role="dialog" aria-labelledby="UpdatePoint" aria-hidden="true">
    <form id="updatePointForm">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content text-left">
                <div class="modal-header">
                    <h5 class="modal-title" id="UpdatePoint">Update Point</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning" id="updatePointMessage" role="alert">

                    </div>
                    <div class="form-row">
                        <div class="form-group col-6">
                            <label for="updatePointName">Point Name</label>
                            <input type="text" class="form-control border-radius-zero" id="updatePointName" placeholder="Point Name" name="updatePointName">
                        </div>
                        <div class="form-group col-6">
                            <label for="updatePointValidMistake">Valid Mistake</label>
                            <input type="number" class="form-control border-radius-zero" id="updatePointValidMistake" placeholder="Valid Mistake" name="updatePointValidMistake">
                        </div>
                    </div>
                    <div class="form-row">

                        <div class="form-group col-6">
                            <label for="updatePointDirection">Direction</label>
                            <select class="form-control border-radius-zero" id="updatePointDirection" name="updatePointDirection">
                                <option value="" disabled selected>Select Direction</option>
                            </select>
                        </div>
                        <div class="form-group col-6">
                            <label for="updatePointPeriod">Period</label>
                            <select class="form-control border-radius-zero" id="updatePointPeriod" name="updatePointPeriod">
                                <option value="" disabled selected> Select Period </option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="updatePointSource">Source</label>
                        <select class="form-control border-radius-zero" id="updatePointSource" name="updatePointSource">
                            <option value="" disabled selected> Select Source </option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="updatePointTag">Tag</label>
                        <div id="updatePointTagError" class="input-group">
                            <input type="text" class="form-control border-radius-zero" id="updatePointTag" name="updatePointTag" placeholder="Select tag" readonly="readonly">
                            <div class="input-group-append">
                                <button class="btn form-select-button" id="selectUpdatePointTag" type="button" data-toggle="collapse" data-target="#collapseUpdatePoint" aria-expanded="false" aria-controls="collapseUpdatePoint">Select</button>
                            </div>

                        </div>
                        <div class="collapse mt-4 text-center" id="collapseUpdatePoint">
                            <div class="row">
                                <div class="col-12">
                                    <div class="border border-radius-zero bg-white text-dark point-list">
                                        <div class="table-responsive">
                                            <table id="updatePointTagTable" class="table table-sm table-fixed modalTable">
                                                <thead id="updatePointTagTableHead" class="thead">

                                                </thead>
                                                <tbody id="updatePointTagTableBody">
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
                <div class="modal-footer text-center">
                    <input name="bgroupId" id="updatePointId" type="hidden" value="">
                    <button type="button" class="btn modal-button-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn modal-button-primary">Save</button>
                </div>
            </div>
        </div>
    </form>
</div>

